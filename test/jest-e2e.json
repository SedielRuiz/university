{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "../",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>/src/$1",
		"^@operation/(.*)$": "<rootDir>/src/operations/$1",
		"^@module/(.*)$": "<rootDir>/src/modules/$1",
		"^@service/(.*)$": "<rootDir>/src/services/$1",
		"^@repository/(.*)$": "<rootDir>/src/repositories/$1"
    }
}